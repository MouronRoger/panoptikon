[MASTER]
ignore=CVS
ignore-patterns=
jobs=0
persistent=yes
extension-pkg-whitelist=PyObjC

[MESSAGES CONTROL]
disable=
    C0111, # missing-docstring (handled by docstring coverage check)
    C0103, # invalid-name
    C0330, # bad-continuation (handled by Black)
    C1801, # len-as-condition
    W0511, # fixme
    R0903, # too-few-public-methods
    R0201, # no-self-use
    R0913, # too-many-arguments (will be handled by complexity limits)

[REPORTS]
output-format=text
reports=yes
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[BASIC]
good-names=i,j,k,ex,Run,_
bad-names=foo,bar,baz

[DESIGN]
max-args=6
max-attributes=12
max-bool-expr=5
max-branches=12
max-locals=15
max-parents=3
max-public-methods=25
max-returns=6
max-statements=50
min-public-methods=1

[SIMILARITIES]
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[FORMAT]
max-line-length=120